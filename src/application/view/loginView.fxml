            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text=" Password: ">
                     <font>
                        <Font size="38.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </PasswordField>
               </children>
            </HBox>
