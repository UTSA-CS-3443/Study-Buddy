            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#createAccountButtonPress" prefWidth="250.0" style="-fx-background-radius: 15px;" text="Create Account">
